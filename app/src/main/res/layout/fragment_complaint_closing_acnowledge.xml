<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.ComplaintManagement.FullscreenContainer"
    android:weightSum="2"
    tools:context=".UI.Fragments.ComplaintClosingAcnowledge.ComplaintClosingAcnowledgeFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        app:lottie_autoPlay="true"
        android:layout_marginBottom="-30dp"
        android:elevation="30dp"

        app:lottie_loop="false"
        app:lottie_rawRes="@raw/completion_acknowledge" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.89"
        android:backgroundTint="#12931F"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#12931F"
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#12931F"
                android:fontFamily="@font/cantata_one"
                android:gravity="center"
                android:padding="12dp"
                android:text="Complaint Closed Successfully"
                android:textColor="#fff"
                android:textSize="19sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>